<div 
class="container mx-auto py-20" 
data-controller="geolocation"
data-latitude="<%= current_user&.profile&.latitude %>"
data-longitude="<%= current_user&.profile&.longitude %>"
>
<ul role="list" class="grid gird-cols-1 gap-x-4 gap-y-8 sm:grid-cols-2 sm:gap-x-6 lg:grid-cols-5 xl:gap-x-8">
	<%  @properties.each do |property| %>
		<li class="relative"
		data-geolocation-target="property"
		data-latitude=" <%= property.latitude %>"
		data-longitude=" <%= property.longitude %> "
		>
			<div class="group block w-full aspect-w-10 aspect-h-7 rounded-lg bg-gray-100 focus-within:ring-2 focus-within:ring-offset-2">
				<%= image_tag property.default_image, class: "object-cover pointer-events-none group-hover:opacity-75" %>
				<button type="button" class="absolute inset-0 focus:outline-none">
					<span class="sr-only">View More Details</span>
				</button>

			</div>
				<p class="mt-2 block text-sm font-medium text-gray-700 truncate pointer-events-none"><%= property.city %>, <%= property.state %>, <%= property.country %> </p>
				<p class="block text-sm font-medium text-gray-700 pointer-events-none">
					<span>
						<%= property.average_rating.round(2) %>
						<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-4 h-4 inline-block relative" style="bottom: 3px;">
						<path stroke-linecap="round" stroke-linejoin="round" d="M11.48 3.499a.562.562 0 011.04 0l2.125 5.111a.563.563 0 00.475.345l5.518.442c.499.04.701.663.321.988l-4.204 3.602a.563.563 0 00-.182.557l1.285 5.385a.562.562 0 01-.84.61l-4.725-2.885a.563.563 0 00-.586 0L6.982 20.54a.562.562 0 01-.84-.61l1.285-5.386a.562.562 0 00-.182-.557l-4.204-3.602a.563.563 0 01.321-.988l5.518-.442a.563.563 0 00.475-.345L11.48 3.5z" />
						</svg>
					</span>
				</p>
				<p data-distance-away class="block text-sm font-medium text-gray-700 pointer-events-none"></p>
				<p class="block text-sm font-medium text-gray-700 pointer-events-none">15 Sep-16 Sep</p>
				<p class="block text-sm font-medium text-gray-700 pointer-events-none"><span class="text-black"><%= humanized_money_with_symbol(property.price) %></span> per Night</p>
		</li>
	<% end %>
</ul>
