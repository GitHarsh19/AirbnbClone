<div class="flex min-h-full flex-col justify-center px-6 py-12 lg:px-8">
  <div class="sm:mx-auto sm:w-full sm:max-w-sm">
    <h2 class="mt-10 text-center text-2xl font-bold leading-9 tracking-tight text-gray-900">Log in to your account</h2>
  </div>
  <div class="mt-10 sm:mx-auto sm:w-full sm:max-w-sm">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name),  html: { class:"" }) do |f|%>
      <%= render "devise/shared/error_messages", resource: resource %>
      <div class="field">
        <p><%= f.label :email, "Email Address", class: "block text-sm font-medium leading-6 text-gray-900" %></p>
        <div class="mt-2">
          <p><%= f.email_field :email, autofocus: true, autocomplete: "email", class: "block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6", placeholder: "harshit@example.com" %></p>
        </div>
      </div>
      <div>
        <div class="flex items-center justify-between field">
          <p><%= f.label :password, class: "block text-sm font-medium leading-6 text-gray-900" %></p>
          <% if @minimum_password_length %>
          <p><em>(<%= @minimum_password_length %> characters minimum)</em></p>
          <% end %>
          <div class="text-sm">
            <a href="#" class="font-semibold text-indigo-600 hover:text-indigo-500">Forgot password?</a>
            <%= link_to "Forgot Password" %>
          </div>
        </div>
        <div class="mt-2">
          <p><%= f.password_field :password, autocomplete: "new-password", class: "block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6" %></p>
        </div>
      </div>

      <div class="actions">
        <%= f.submit "Log In", class: "flex w-full justify-center rounded-md bg-indigo-600 px-3 py-1.5 text-sm font-semibold leading-6 text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600" %>
      </div>
      <% end %>
    <p class="mt-10 text-center text-sm text-gray-500">
      Not A User?
      <%= link_to "Sign Up Here", new_user_registration_path, class:"font-semibold leading-6 text-indigo-600 hover:text-indigo-500" %>
    </p>
  </div>
</div>

<%= render "devise/shared/links" %>